<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My work</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Projects</h3>

    {/* Responsive grid */}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        projects.map((project) => (
          <article class="group relative rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition duration-300 bg-[#111]">
            <a
              href={project.preview}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`Open live preview of ${project.title}`}
              aria-describedby={`desc-${project.title}`}
              class="block focus:outline focus:outline-2 focus:outline-offset-2 focus:outline-[var(--sec)]"
            >
              {/* Gambar */}
              <Image
                src={project.image}
                alt={`Thumbnail of ${project.title}`}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300 aspect-square"
              />

              {/* Overlay Info */}
              <div class="absolute bottom-0 left-0 right-0 bg-black/70 p-4">
                <h4 class="text-xl font-semibold">{project.title}</h4>
                <span class="text-sm text-[var(--white-icon)]">{project.status}</span>
                <p id={`desc-${project.title}`} class="text-xs text-[var(--white-icon)] mt-1">
                  {project.description}
                </p>
              </div>
            </a>

            {/* Tombol Aksi */}
            <div class="absolute top-2 right-2 flex gap-2">
              <a
                href={project.link}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`GitHub repository for ${project.title}`}
                aria-describedby={`desc-${project.title}`}
                class="focus:outline focus:outline-2 focus:outline-offset-2 focus:outline-[var(--sec)] size-10 flex justify-center items-center rounded-md bg-black/60 hover:bg-black/80 text-white transition"
              >
                {/* GitHub icon */}
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="size-5">
                  <path d="M24 12L18.34 17.66L16.93 16.24L21.17 12L16.93 7.76L18.34 6.34L24 12ZM2.83 12L7.07 16.24L5.66 17.66L0 12L5.66 6.34L7.07 7.76L2.83 12ZM9.79 21H7.66L14.21 3H16.34L9.79 21Z"/>
                </svg>
              </a>

              <a
                href={project.preview}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Live preview of ${project.title}`}
                aria-describedby={`desc-${project.title}`}
                class="focus:outline focus:outline-2 focus:outline-offset-2 focus:outline-[var(--sec)] size-10 flex justify-center items-center rounded-md bg-black/60 hover:bg-black/80 text-white transition"
              >
                {/* Preview icon */}
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="size-5">
                  <path d="M16 9.41L7.4 18.02L5.98 16.61L14.59 8H7V6H18V17H16V9.41Z"/>
                </svg>
              </a>
            </div>
          </article>
        ))
      }
    </div>

    {/* Tombol More Projects */}
